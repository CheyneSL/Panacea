@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInMgr
@inject UserManager<User> UserMgr

<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/logo.png">
    <link rel="icon" type="image/png" href="~/logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @ViewBag.Title
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="../assets/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <link href="/css/material-dashboard.css" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo">
                <h3 href="Index" class="simple-text logo-normal"><!--USE asp-controller & as--action methods instead!!!-->
                    Panacea
                </h3>

            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item  ">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="material-icons">notifications</i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="nav-item  ">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Application")">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("AccountInfo", "Account")">
                            <i class="material-icons">person</i>
                            <p>Account</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProjectRegistration", "Application")">
                            <i class="material-icons">content_paste</i>
                            <p>Add Project</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("BugSubmission", "Application")">
                            <i class="material-icons">library_books</i>
                            <p>Submit a Bug</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Archive", "Application")">
                            <i class="material-icons">bubble_chart</i>
                            <p>Archive</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <h2>@ViewBag.Page</h2>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <!--Notifications-->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Application")">
                                    <i class="material-icons">notifications</i>
                                </a>
                            </li>
                            <!--Account-->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("AccountInfo", "Account")">
                                    <i class="material-icons">person</i> @UserMgr.GetUserName(User)
                                </a>
                            </li>
                            <!-- your navbar here -->
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <!--Custom Content-->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!--Footer-->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright float-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> Panacea.dev
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>

</html>