@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Home Page";
}

@model User 

<div style="position: relative; top: 0; left: 0">

    <img src="~/images/robot.jpg" style="width: 100%; height: 88vh; position: relative; top: 0; left: 0;" />
    <div style="background-color: black; opacity: 0.5; width: 100%; height: 100%; position: absolute; top: 0; left: 0"></div>

    <div style="position: absolute; top: 0; left: 0;">
        <div style="margin-left: 50px; margin-top: 10px; object-fit: contain; text-align: center">
            <img src="~/images/panacea-index.png" />
            <h1 style="color: white; text-align: center">PANACEA</h1>

            <h2 style="color: white; margin-top: -20px">Simplicity for Scalability</h2>

            @if (User.Identity.IsAuthenticated)
            {
                <button type="submit" class="btn btn-info" style="margin-top: 30px">@Html.ActionLink("Dashboard", "Dashboard", "Application", 
                                                                                    null, 
                                                                                    new { @class = "text-white" })</button>
            }
            else
            {
                <button type="submit" class="btn btn-info" style="margin-top: 30px">@Html.ActionLink("Login", "UserLogin", "Account", 
                                                                                    null, 
                                                                                    new { @class = "text-white" })</button>
            }

        </div>
    </div>

</div>